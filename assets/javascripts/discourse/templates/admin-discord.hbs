{{#if siteSettings.discord_header_image }}
  <img src="{{ siteSettings.discord_header_image }}" alt="header_image">
{{else}}
  <h1>{{d-icon 'fab-discord'}}{{" "}}{{ i18n 'discord_datastore.admin.title' }}</h1>
{{/if}}

<div class="discord-data">
  
  <div class="discord-data-user">
    {{user-chooser
      id="filter-by-user"
      value=searchedTerms.username
      onChange=(action "onChangeSearchTermForUsername")
        options=(hash
        headerAriaLabel=(i18n "discord_datastore.user_search")
        maximum=1
        excludeCurrentUser=false
      )
    }}
    {{ "Selected user: " }}{{ searched_username }}
  </div>
  
  <hr> <!-- ==================================================================================== -->
  
  <div class="discord-data-stats">
    <div class="discord-stat"><div class="discord-stat-value">{{"0"}}</div><div class="discord-stat-label">{{"Messages sent"}}</div></div>
    <div class="discord-stat"><div class="discord-stat-value">{{"0"}}</div><div class="discord-stat-label">{{"Messages in the last 30 days"}}</div></div>
    <div class="discord-stat"><div class="discord-stat-value">{{"0"}}</div><div class="discord-stat-label">{{"Reacts sent"}}</div></div>
    <div class="discord-stat"><div class="discord-stat-value">{{"0"}}</div><div class="discord-stat-label">{{"Reacts received"}}</div></div>
  </div>

  <hr> <!-- ==================================================================================== -->

  <div class="discord-data-rank-header">
    <h3>{{d-icon 'fab-discord'}}{{" "}}{{ i18n "discord_datastore.rank_title" }}</h3>
  </div>

  <div class="discord-data-rank">

    {{#if siteSettings.discord_rank_1_id}}<div class="discord-rank">
      <img class="discord-rank-img" src="{{ siteSettings.discord_rank_1_image }}" alt="" />
      <div class="discord-rank-label">{{ siteSettings.discord_rank_1_id }}</div>
      <div class="discord-rank-count">{{ siteSettings.discord_rank_1_count }}{{" "}}{{ i18n "discord_datastore.messages" }}</div>
    </div>{{/if}}
    {{#if siteSettings.discord_rank_2_id}}<div class="discord-rank">
      <img class="discord-rank-img" src="{{ siteSettings.discord_rank_2_image }}" alt="" />
      <div class="discord-rank-label">{{ siteSettings.discord_rank_2_id }}</div>
      <div class="discord-rank-count">{{ siteSettings.discord_rank_2_count }}{{" "}}{{ i18n "discord_datastore.messages" }}</div>
    </div>{{/if}}
    {{#if siteSettings.discord_rank_3_id}}<div class="discord-rank">
      <img class="discord-rank-img" src="{{ siteSettings.discord_rank_3_image }}" alt="" />
      <div class="discord-rank-label">{{ siteSettings.discord_rank_3_id }}</div>
      <div class="discord-rank-count">{{ siteSettings.discord_rank_3_count }}{{" "}}{{ i18n "discord_datastore.messages" }}</div>
    </div>{{/if}}
    {{#if siteSettings.discord_rank_4_id}}<div class="discord-rank">
      <img class="discord-rank-img" src="{{ siteSettings.discord_rank_4_image }}" alt="" />
      <div class="discord-rank-label">{{ siteSettings.discord_rank_4_id }}</div>
      <div class="discord-rank-count">{{ siteSettings.discord_rank_4_count }}{{" "}}{{ i18n "discord_datastore.messages" }}</div>
    </div>{{/if}}
    {{#if siteSettings.discord_rank_5_id}}<div class="discord-rank">
      <img class="discord-rank-img" src="{{ siteSettings.discord_rank_5_image }}" alt="" />
      <div class="discord-rank-label">{{ siteSettings.discord_rank_5_id }}</div>
      <div class="discord-rank-count">{{ siteSettings.discord_rank_5_count }}{{" "}}{{ i18n "discord_datastore.messages" }}</div>
    </div>{{/if}}
    {{#if siteSettings.discord_rank_6_id}}<div class="discord-rank">
      <img class="discord-rank-img" src="{{ siteSettings.discord_rank_6_image }}" alt="" />
      <div class="discord-rank-label">{{ siteSettings.discord_rank_6_id }}</div>
      <div class="discord-rank-count">{{ siteSettings.discord_rank_6_count }}{{" "}}{{ i18n "discord_datastore.messages" }}</div>
    </div>{{/if}}
    {{#if siteSettings.discord_rank_7_id}}<div class="discord-rank">
      <img class="discord-rank-img" src="{{ siteSettings.discord_rank_7_image }}" alt="" />
      <div class="discord-rank-label">{{ siteSettings.discord_rank_7_id }}</div>
      <div class="discord-rank-count">{{ siteSettings.discord_rank_7_count }}{{" "}}{{ i18n "discord_datastore.messages" }}</div>
    </div>{{/if}}
    {{#if siteSettings.discord_rank_8_id}}<div class="discord-rank">
      <img class="discord-rank-img" src="{{ siteSettings.discord_rank_8_image }}" alt="" />
      <div class="discord-rank-label">{{ siteSettings.discord_rank_8_id }}</div>
      <div class="discord-rank-count">{{ siteSettings.discord_rank_8_count }}{{" "}}{{ i18n "discord_datastore.messages" }}</div>
    </div>{{/if}}
    {{#if siteSettings.discord_rank_9_id}}<div class="discord-rank">
      <img class="discord-rank-img" src="{{ siteSettings.discord_rank_9_image }}" alt="" />
      <div class="discord-rank-label">{{ siteSettings.discord_rank_9_id }}</div>
      <div class="discord-rank-count">{{ siteSettings.discord_rank_9_count }}{{" "}}{{ i18n "discord_datastore.messages" }}</div>
    </div>{{/if}}

  </div>

  <hr> <!-- ==================================================================================== -->

  <div class="discord-data-columns">

    <div class="discord-data-channels">
      {{#if channels}}
        <div class="discord-data-channels-header">
          <h3>{{d-icon 'fab-discord'}}{{" "}}{{ i18n "discord_datastore.channel_title" }}</h3>
        </div>
        <div class="discord-channel-list" >
          {{#each channels as |channel|}}
            <div class="discord-channel-list-element">
              <h3>{{ "#" }}{{ channel.name }}</h3>{{ channel.length }}{{ ' ' }}{{i18n 'discord_datastore.channel_message_total' }}
            </div>
          {{/each}}
        </div>
      {{else}}
        {{ i18n "discord_datastore.no_channels" }}
      {{/if}}  
    </div>
    
    <div class="discord-data-messages">
      {{#if messages}}
        <div class ="discord-data-messages-header">
          
          <h3>{{d-icon 'fab-discord'}}{{" "}}{{ i18n "discord_datastore.message_history_title" }}</h3>
          <div class="message-paginate-buttons">
            <button type='submit' class='discord-button'>
              {{ i18n "discord_datastore.message_pagination_previous" }}
            </button>
            <b>{{ currentPage }}</b>
            <button type='submit' class='discord-button' {{ action "nextMessagePage" currentPage }}>
              {{ i18n "discord_datastore.message_pagination_next" }}
            </button>
          </div>

        </div>

        <div class="discord-message-list" >
          <ul>
            {{#each messages as |message|}}
              <li>
                <div class="discord-message">
                  <div class="discord-avatar"><img src="{{message.user_avatar}}" alt="" /></div>
                  <div class="discord-message-content">
                    {{ message.user_nickname }}{{ " in " }}<b>{{"#"}}{{ message.channel_name }}</b>{{ ": " }}<br>
                    {{ message.content }}
                  </div>
                </div>
              </li>
            {{/each}}
          </ul>
        </div>
      {{else}}
        {{ i18n "discord_datastore.no_messages" }}
      {{/if}}

    </div>

  </div>
</div>
